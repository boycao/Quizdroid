<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewResult"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewCorrectAnswer" android:textSize="24sp"/>
    <TextView
            android:text="Your Answer"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/textViewYourAnswer"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="315dp"/>
    <TextView
            android:text="Correct Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewCorrectAnswer"
            tools:layout_editor_absoluteY="253dp" tools:layout_editor_absoluteX="220dp"/>
    <TextView
            android:text="Number Correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewNumberCorrect"
            tools:layout_editor_absoluteY="388dp" tools:layout_editor_absoluteX="65dp"/>
    <TextView
            android:text="Questions Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewQuestionsLeft"
            tools:layout_editor_absoluteY="388dp" tools:layout_editor_absoluteX="220dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="536dp"
            tools:layout_editor_absoluteX="153dp" android:id="@+id/buttonNextQuestion"/>
</android.support.constraint.ConstraintLayout>